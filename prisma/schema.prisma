datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  projects  Project[]
  createdAt DateTime @default(now())
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     Int
  sites       Site[]
  createdAt   DateTime @default(now())
}

model Site {
  id             Int        @id @default(autoincrement())
  name           String
  vegetationType String?    // NEW â€” forest, grassland, etc.
  project        Project    @relation(fields: [projectId], references: [id])
  projectId      Int
  geometry       Json
  areaSqMeters   Float
  carbonEstimate Float
  createdAt      DateTime   @default(now())
  analytics      Analytics[]
}


model Analytics {
  id       Int      @id @default(autoincrement())
  site     Site     @relation(fields: [siteId], references: [id])
  siteId   Int
  date     DateTime
  metric   String
  value    Float
}
